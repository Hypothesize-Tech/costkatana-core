{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./dist",
      "removeComments": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": [
      "node_modules",
      "dist",
      "tests",
      "examples",
      "**/*.test.ts",
      "**/*.spec.ts"
    ]
  }